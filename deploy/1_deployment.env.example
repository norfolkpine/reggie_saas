# === Global Deployment Defaults ===
PROJECT_ID=bh-opie
REGION=australia-southeast1

# === VM Provisioning ===
VM_NAME=opie-stack-vm
ZONE=australia-southeast1
MACHINE_TYPE=e2-small
IMAGE_FAMILY=ubuntu-2204-lts
IMAGE_PROJECT=ubuntu-os-cloud

# === Cloud SQL ===
INSTANCE_NAME=db0
DB_NAME=bh_opie
DB_USER=opieuser
DB_PASS=CHANGE_ME
PG_VERSION=POSTGRES_15
TIER=db-f1-micro
STORAGE=10

# === Service Accounts ===
CLOUD_RUN_SA=cloud-run-test@bh-opie.iam.gserviceaccount.com
GITHUB_ACTIONS_SA=github-actions-test@bh-opie.iam.gserviceaccount.com
STORAGE_SA=bh-opie-storage@bh-opie.iam.gserviceaccount.com
SQL_BACKUP_SA=sql-backup@bh-opie.iam.gserviceaccount.com
CLOUD_STORAGE_BACKUP_SA=cloud-storage-backup@bh-opie.iam.gserviceaccount.com

# === Storage Buckets ===
STATIC_BUCKET=bh-opie-static
MEDIA_BUCKET=bh-opie-media
DOCS_BUCKET=bh-opie-docs

# === Cloud Run ===
SERVICE_NAME=llamaindex-ingestion
SERVICE_ACCOUNT=${CLOUD_RUN_SA}
IMAGE=australia-southeast1-docker.pkg.dev/bh-opie/containers/llamaindex-ingestion

# === Secrets ===
SECRET_NAME=llamaindex-ingester-env

